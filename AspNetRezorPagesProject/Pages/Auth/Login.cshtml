@page
@model AspNetRezorPagesProject.Pages.Auth.LoginModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
}

<div class="auth-card">

    <h2 class="auth-title">Login</h2>

    <form method="post" novalidate>

        <div class="form-group">
            <label asp-for="LoginDto.Email" class="auth-label">Email</label>
            <input asp-for="LoginDto.Email" class="form-control" />
            <span asp-validation-for="LoginDto.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LoginDto.Password" class="auth-label">Password</label>
            <input asp-for="LoginDto.Password" type="password" class="form-control" />
            <span asp-validation-for="LoginDto.Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-primary">Войти</button>

        <div class="auth-footer">
            <span>Don't have an account?</span>
            <a asp-page="/Auth/Register">Register</a>
        </div>


    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
